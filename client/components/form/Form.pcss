.formCont {
    width: 30%;
    border: 2px solid #eee;
    padding: 20px;

    & .formGroup {
        font-size: 16px;
        margin-bottom: 15px;

        & .formControl {
            margin-left: 10px;
            height: 15px;
            width: 60%;
        }
    }

    & .btn {
        padding: 10px;
        font-size: 14px;
        cursor: pointer;
    }
}